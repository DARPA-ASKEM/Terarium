{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "modelConfiguration": {
      "type": "object",
      "description": "A model configuration is the set of values of the parameters and initial values of the state variables of the model.",
      "properties": {
        "modelId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "inferredParameterList": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "properties": {
              "distribution": {
                "type": "object",
                "properties": {
                  "parameters": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": [
                          "number",
                          "null"
                        ]
                      },
                      "minimum": {
                        "type": [
                          "number",
                          "null"
                        ]
                      },
                      "maximum": {
                        "type": [
                          "number",
                          "null"
                        ]
                      }
                    },
                    "required": [
                      "value",
                      "minimum",
                      "maximum"
                    ],
                    "additionalProperties": false
                  },
                  "type": {
                    "type": "string"
                  }
                },
                "required": [
                  "parameters",
                  "type"
                ],
                "additionalProperties": false
              },
              "referenceId": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "initial",
                  "parameter",
                  "observable",
                  "inferred"
                ]
              }
            },
            "required": [
              "distribution",
              "referenceId",
              "source",
              "type"
            ],
            "additionalProperties": false
          }
        },
        "initialSemanticList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "expression": {
                "type": "string"
              },
              "expressionMathml": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "target": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "initial",
                  "parameter",
                  "observable",
                  "inferred"
                ]
              }
            },
            "required": [
              "expression",
              "expressionMathml",
              "source",
              "target",
              "type"
            ],
            "additionalProperties": false
          }
        },
        "observableSemanticList": {
          "type": "array",
          "description": "A list of observables defined for the model.",
          "items": {
            "type": "object", 
            "description": "An observable is a real-valued function of the parameters and state variables of the model; it usually reprsents a measurable property that can be derived from the state of the model; examples include the total population of individuals (sum of all the state variables in a compartmental model) and the basic reproduction number (a ratio of the transmission rate and the recovery rate).",
            "properties": {
              "expression": {
                "type": "string",
                "description": "A mathematical representation of the observable function, written in SymPy."
              },
              "expressionMathml": {
                "type": "string",
                "description": "A MathML equivalent of the Sympy expression for the observable."
              },
              "referenceId": {
                "type": "string",
                "description": "A unique and short name for the observable; for example, 'N' for the total population and 'R0' for the basic reproduction number."
              },
              "source": {
                "type": "string",
                "description": "A citation or description of the reference resource in which the observable is defined.",
              },
              "states": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "type": {
                "type": "string",
                "enum": [
                  "initial",
                  "parameter",
                  "observable",
                  "inferred"
                ]
              }
            },
            "required": [
              "expression",
              "expressionMathml",
              "referenceId",
              "source",
              "states",
              "type"
            ],
            "additionalProperties": false
          }
        },
        "parameterSemanticList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "distribution": {
                "type": "object",
                "properties": {
                  "parameters": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": [
                          "number",
                          "null"
                        ]
                      },
                      "minimum": {
                        "type": [
                          "number",
                          "null"
                        ]
                      },
                      "maximum": {
                        "type": [
                          "number",
                          "null"
                        ]
                      }
                    },
                    "required": [
                      "value",
                      "minimum",
                      "maximum"
                    ],
                    "additionalProperties": false
                  },
                  "type": {
                    "type": "string"
                  }
                },
                "required": [
                  "parameters",
                  "type"
                ],
                "additionalProperties": false
              },
              "referenceId": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "initial",
                  "parameter",
                  "observable",
                  "inferred"
                ]
              }
            },
            "required": [
              "distribution",
              "referenceId",
              "source",
              "type"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "description",
        "modelId",
        "name",
        "inferredParameterList",
        "initialSemanticList",
        "observableSemanticList",
        "parameterSemanticList"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "conditions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/modelConfiguration"
      },
      "additionalProperties": false
    }
  },
  "required": [
    "conditions"
  ],
  "additionalProperties": false
}
