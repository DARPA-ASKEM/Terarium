{
  "index_patterns": [
    "*_document_tera_1.0"
  ],
  "version": 1,
  "priority": 500,
  "_meta": {
    "description": "This index template is the standard template for all Terarium DOCUMENT indices"
  },
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 16,
        "number_of_replicas": 1,
        "refresh_interval": "1s"
      }
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword",
          "ignore_above": 512
        },
        "createdOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "updatedOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "deletedOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "temporary": {
          "type": "boolean"
        },
        "publicAsset": {
          "type": "boolean"
        },
        "name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "description": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "userId": {
          "type": "keyword",
          "ignore_above": 512
        },
        "fileNames": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "documentUrl": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "metadata": {
          "type": "object",
          "enabled": false
        },
        "source": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "text": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "grounding": {
          "type": "nested",
          "properties": {
            "identifiers": {
              "type": "object",
              "enabled": false
            },
            "context": {
              "type": "object",
              "enabled": false
            }
          }
        },
        "concepts": {
          "type": "nested",
          "properties": {
            "curie": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "activeConcept": {
              "type": "nested",
              "properties": {
                "curie": {
                  "type": "text",
                  "fields": {
                    "keyword": {
                      "type": "keyword",
                      "ignore_above": 512
                    }
                  }
                },
                "name": {
                  "type": "text",
                  "fields": {
                    "keyword": {
                      "type": "keyword",
                      "ignore_above": 512
                    }
                  }
                }
              }
            },
            "type": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "objectId": {
              "type": "keyword",
              "ignore_above": 512
            },
            "status": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            }
          }
        },
        "assets": {
          "type": "nested",
          "properties": {
            "fileName": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "assetType": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "metadata": {
              "type": "object",
              "enabled": false
            }
          }
        }
      }
    }
  }
}
