{
  "index_patterns": [
    "*_dataset_tera_2.0"
  ],
  "version": 1,
  "priority": 500,
  "_meta": {
    "description": "This index template is the standard template for all Terarium DATASET indices"
  },
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 16,
        "number_of_replicas": 1,
        "refresh_interval": "1s"
      }
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword",
          "ignore_above": 512
        },
        "createdOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "updatedOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "deletedOn": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "temporary": {
          "type": "boolean"
        },
        "publicAsset": {
          "type": "boolean"
        },
        "name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "description": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "userId": {
          "type": "keyword",
          "ignore_above": 512
        },
        "dataSourceDate": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "fileNames": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "datasetUrl": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "columns": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "description": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "dataType": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "formatStr": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "annotations": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 512
                }
              }
            },
            "metadata": {
              "type": "object",
              "enabled": false
            },
            "grounding": {
              "type": "nested",
              "properties": {
                "identifiers": {
                  "type": "object",
                  "enabled": false
                },
                "context": {
                  "type": "object",
                  "enabled": false
                }
              }
            }
          }
        },
        "metadata": {
          "type": "object",
          "enabled": false
        },
        "source": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "grounding": {
          "type": "nested",
          "properties": {
            "identifiers": {
              "type": "object",
              "enabled": false
            },
            "context": {
              "type": "object",
              "enabled": false
            }
          }
        }
      }
    }
  }
}
