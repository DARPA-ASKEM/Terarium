  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "TaskRunnerApplication",
      "request": "launch",
      "mainClass": "software.uncharted.terarium.taskrunner.TaskRunnerApplication",
      "projectName": "taskrunner",
      "args": [
        "--spring.profiles.active=default,local"
      ]
    },
    {
      "type": "java",
      "name": "TerariumApplication Local",
      "request": "launch",
      "mainClass": "software.uncharted.terarium.hmiserver.TerariumApplication",
      "projectName": "server",
      "args": [
        "--spring.profiles.active=default,secrets,local"
      ]
    },
    {
      "type": "java",
      "name": "TerariumApplication Remote",
      "request": "launch",
      "mainClass": "software.uncharted.terarium.hmiserver.TerariumApplication",
      "projectName": "server",
      "args": [
        "--spring.profiles.active=default,secrets"
      ]
    }
  ]
